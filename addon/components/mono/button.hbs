{{#if @href}}
    <LinkTo class="c-button c-button--{{this.skin}}" @route={{@href}} ...attributes>
        <Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
          {{yield}}
        </Button::InnerLayout>
    </LinkTo>
{{else}}
    <button class="c-button c-button--{{this.skin}}" ...attributes>
       <Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
          {{yield}}
       </Button::InnerLayout>
    </button>
{{/if}}
